{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Gallagher REST api",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "gallagher_restapi",
      "args": ["${input:api_key}", "${input:host}"],
      "justMyCode": true,
      "stopOnEntry": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Gallagher REST api (debug)",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "gallagher_restapi",
      "args": ["${input:api_key}", "${input:host}", "-D"],
      "justMyCode": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "api_key",
      "description": "Enter API Key.",
    },
    {
      "type": "promptString",
      "id": "host",
      "description": "Enter Gallagher host.",
    }
  ]
}
